            <!--////---서비스이용내역 시작///////-->
            <table border="0" cellspacing="0" width="100%" class="table_style11">
                <tr>
                    <th>상품/서비스번호</th>
                    <th>상품/서비스명</th>
                    <th>서비스구분</th>
                    <th>가격</th>
                </tr>
<%
    if(rList.length > 0) {
        rList.forEach(function(item, index) {
%>
                <tr>
                    <td><%=item.pCode%></td>
                    <td><%=item.pNm%></td>
                    <td><%=item.pDivNm%></td>
                    <td><%=fnComma(item.pPrice)%></td>
                </tr>
<%
            })
        } else {
%>
                <tr>
                    <td colspan="12" style="text-align: center;">
                        No Data
                    </td>
                </tr>
<%
        }
%>
            </table>
            <!--////---서비스이용내역 끝///////-->

            <div class="btn-area">
                <a id="closeBtn" href="#" class="mfp-close">닫기</a>
            </div>
        </div>
    </form>
    </div><!-- #join -->
</body>
</html>
<% layout('../../../admin/layout') -%>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            // console.
            $("#prevBtn").on('click', function(e) {
                e.preventDefault();
               location.href = '/';
            });
            // 삭제 버튼 이벤트 처리.
            $("#delBtn").on("click", function(e) {
                e.preventDefault();
                var chkVals = [];
                var chkLen = $("input:checkbox[name='chkBox']:checked").length;
                if(chkLen>0) {
                    $("input[name=chkBox]:checkbox").each(function (idx, item) {
                        if ($(this).is(":checked")) {
                            chkVals.push($(item).val());
                        }
                    });
                } else {
                    alert("삭제할 브랜드명을 선택하여 주세요!");
                    return;
                }
                //$("#chkParams").val(chkVals);
                $.ajax({
                    type : "post",
                    url : "/admin/model/category/delete",
                    dataType : "json",
                    data : {"dataList" : chkVals},
                    success : function(data) {
                        if(data.result=='OK') {
                            location.href = "/admin/model/category";
                        }
                    },
                    error : function(request, status, error) {
                        alert("Code :  " + request.status + "\n" +
                                        "message : " + request.responseText + "\n" +
                                        "error : " + error);
                    }
                });
            });
            // 전체 선택 버튼 이벤트 처리.
            $("#allChkbox").on('click', function () {
                if ($(this).is(":checked")) {
                    $("input[name=chkBox]:checkbox").each(function () {
                        $(this).prop("checked", true)
                    });
                } else {
                    $("input[name=chkBox]:checkbox").each(function () {
                        $(this).prop("checked", false)
                    });
                }
            });
            // 추가 엔터키 이벤트 처리.
            $("#cateName").on("keydown", function(e) {
                var code = (e.keyCode ? e.keyCode : e.which);
                if(code == 13) {
                    e.preventDefault();
                    var cateName = $.trim($("#cateName").val());
                    if(cateName == "") {
                        alert("브랜드명을 입력하세요");
                        $("#cateName").focus();
                        return false;
                    }

                    $("#frm").attr("method","post");
                    $("#frm").attr("action","/admin/model/category/insert");
                    $("#frm").submit();
                }
            });

            // 추가 버튼 이벤트 처리.
            $("#saveBtn").on("click", function(e) {
                e.preventDefault();
                var cateName = $.trim($("#cateName").val());
                if(cateName == "") {
                    alert("브랜드명을 입력하세요");
                    $("#cateName").focus();
                    return false;
                }

                $("#frm").attr("method","post");
                $("#frm").attr("action","/admin/model/category/insert");
                $("#frm").submit();
            });

            // 검색버튼 이벤트 처리.
            $("#srchBtn").on("click", function(e) {
                e.preventDefault();
                var selectedVal = $("#srchType option:selected").val();

                // 선택박스 체크.
                if(selectedVal == null || selectedVal == "") {
                    alert("검색할려는 항목을 선택하여 주세요.");
                    $("#srchType").focus();
                    return false;
                }
                // 검색할 텍스터 체크.
                /*
                 if($("#srchText").val() == null || $("#srchText").val() == "") {
                 alert("검색 단어을 입력하여 주세요.");
                 $("#srchText").focus();
                 return false;
                 }
                 */
                var srchText = $("#srchText").val();
                // 전송 처리.
                $("#srchType").val(selectedVal);
                $("#srchText").val(srchText);
                $("#searchForm").attr("method","post");
                $("#searchForm").attr("action","/admin/model/category/search");
                $("#searchForm").submit();
            });
        });
    </script>

<% layout('../../admin/layout') -%>
    <script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            CKEDITOR.replace("editBox");
            // console.
            $("#submitBtn").on('click', function() {
                var content = CKEDITOR.instances.editBox.getData();
                $("#content").val(content);
                $("#frm").attr("action","/admin/announce/insert");
                $("#frm").submit();
            });
            $("#prevBtn").on('click', function() {
                location.href = "/admin/announce";
            });
        });
    </script>
<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">공지사항 관리 화면</h1>
        </div>

    </div>
    <form name="frm" id="frm" method="post" class="form-horizontal">
        <input type="hidden" id="content" name="content" value=""/>
        <table class="table table-bordered">
            <tr>
                <td>
                    <label for="title">제목</label>
                </td>
                <td>
                    <input type="text" name="title" id="title" class="form-control" value="" maxlength="60" size="80"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="writer">작성자</label>
                </td>
                <td>
                    <input type="text" name="writer" id="writer" class="form-control" value="" maxlength="20" size="80"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="editBox">글 내용</label>
                </td>
                <td>
                    <textarea id="editBox" name="editBox" class="form-control" maxlength="9999" style="width:800px; height:600px"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="writer">카테고리</label>
                </td>
                <td>
                    <input type="text" name="ctg" id="ctg" class="form-control" value="" maxlength="12" size="15"/>
                </td>
            </tr>
        </table>
        <p class="form-group">
            <div class="col-sm-offset-2 col-sm-10 text-right">
                <input type="button" id="submitBtn" name="submitBtn" class="btn btn-default" value="전송"/>&nbsp;
                <input type="button" id="prevBtn" name="prevBtn" class="btn btn-default" value="이전화면"/>
            </div>
        </p>
    </form>
</div>
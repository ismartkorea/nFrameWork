<% layout('../../admin/layout') -%>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            // console.
            $("#prevBtn").on('click', function(e) {
                e.preventDefault();
               location.href = '/';
            });
            $("#newBtn").on('click', function (e) {
                e.preventDefault();
                location.href = '/admin/notification/new';
            });
            $("#delBtn").on("click", function(e) {
                e.preventDefault();
                var chkVals = [];
                var chkLen = $("input:checkbox[name='chkBox']:checked").length;
                if(chkLen>0) {
                    $("input[name=chkBox]:checkbox").each(function (idx, item) {
                        if ($(this).is(":checked")) {
                            chkVals.push($(item).val());
                        }
                    });
                } else {
                    alert("삭제할 게시물을 선택하여 주세요!");
                    return;
                }
                //$("#chkParams").val(chkVals);
                $.ajax({
                    type : "post",
                    url : "/admin/notification/delete",
                    dataType : "json",
                    data : {"dataList" : chkVals},
                    success : function(data) {
                        if(data.result == "OK") {
                            callback();
                        }
                    },
                    error : function(request, status, error) {
                        console.log("Code :  " + request.status + "\n" +
                                        "message : " + request.responseText + "\n" +
                                        "error : " + error);
                    }
                });
                //$("#frm").attr("method","post");
                //$("#frm").attr("action","/board/delete");
                //$("#frm").submit();
            });
            $("#allChkbox").on('click', function () {
                if ($(this).is(":checked")) {
                    $("input[name=chkBox]:checkbox").each(function () {
                        $(this).prop("checked", true)
                    });
                } else {
                    $("input[name=chkBox]:checkbox").each(function () {
                        $(this).prop("checked", false)
                    });
                }
            });

            // 검색버튼 이벤트 처리.
            $("#srchBtn").on("click", function(e) {
                e.preventDefault();
                var selectedVal = $("#srchType option:selected").val();

                // 선택박스 체크.
                if(selectedVal == null || selectedVal == "") {
                    alert("검색할려는 항목을 선택하여 주세요.");
                    $("#srchType").focus();
                    return false;
                }
                // 검색할 텍스터 체크.
/*
                if($("#srchText").val() == null || $("#srchText").val() == "") {
                    alert("검색 단어을 입력하여 주세요.");
                    $("#srchText").focus();
                    return false;
                }
*/
                var srchText = $("#srchText").val();
                // 전송 처리.
                $("#srchType").val(selectedVal);
                $("#srchText").val(srchText);
                $("#searchForm").attr("method","post");
                $("#searchForm").attr("action","/admin/notification/search");
                $("#searchForm").submit();
            });
        });
        // btn Event
        function onEdit(no) {
            location.href = '/admin/notification/view/'+no;
        }
        // callback
        function callback() {
            location.href = "/admin/notification";
        }
    </script>

                        //$("input[type='hidden'][name='usrId[]']").val(sUsrId);
                        //$("input[type='hidden'][name='payStatus[]']").val(sPayStatus);
                        //$("input[type='hidden'][name='taxInvoiceYn[]']").val(sTaxInvoiceYn);

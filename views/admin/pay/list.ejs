                                sUsrId.push($("#tUsrId"+idx).val());
                                sPayStatus.push($("#tPayStatus"+idx+" option:selected").val());
                                sTaxInvoiceYn.push($("#tTaxInvoiceYn"+idx+" option:selected").val());

<% layout('../../admin/layout') -%>
    <script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            CKEDITOR.replace("editBox");
            // console.
            $("#submitBtn").on('click', function() {
                var content = CKEDITOR.instances.editBox.getData();
                $("#content").val(content);
                $("#frm").attr("action","/admin/qna/insert");
                $("#frm").submit();
            });
        });
    </script>
<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">QnA 관리 화면</h1>
        </div>
    </div>
    <form name="frm" id="frm" method="post">
        <input type="hidden" id="content" name="content" value=""/>
        <table style="margin: 0 auto">
            <tr>
                <td>
                    <label for="">제목</label>
                </td>
                <td>
                    <input type="text" name="title" id="title" value="" size="80"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="">작성자</label>
                </td>
                <td>
                    <input type="text" name="writer" id="writer" value="" size="80"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="">글 내용</label>
                </td>
                <td>
                    <textarea id="editBox" name="editBox" style="width:800px; height:600px"></textarea>
                </td>
            </tr>
            <tr>
                <td colspan="4" align="center">
                    <input type="button" id="submitBtn" name="submitBtn" value="전송"/>
                </td>
            </tr>
            <tr>
                <td colspan="4" align="center">
                    <a href="/admin">리스트 화면으로</a>
                </td>
            </tr>
        </table>
    </form>
</div>

<% layout('../../admin/layout') -%>
<script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/js/common.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        CKEDITOR.replace("editBox", {
            "filebrowserUploadUrl" : "/common/ckedit/upload",
            width : "100%",
            height : "260"
        });
        // console.
        $("#submitBtn").on('click', function() {
            var content = CKEDITOR.instances.editBox.getData();
            $("#content").val(content);
            $("#frm").attr("action","/admin/board/insert");
            $("#frm").submit();
        });
        $("#prevBtn").on('click', function() {
            location.href = "/admin/board";
        });
    });
    // 상세 조회 처리.
    function openPopup() {
        var url = "/help/editorHelp.html";
        var name = "에디터 도움말 화면";
        var left = 0;
        var top = 0;
        var width = 1024;
        var height = 640;
        var toolbar = 0;
        var menubar = 0;
        var statusbar = 1;
        var scrollbar = 1;
        var resizable = 0;
        var location = 0;
        popup_window_common(url, name, left, top, width, height, toolbar, menubar, statusbar, scrollbar, resizable, location);
    }
</script>
<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">버그 리포트 화면</h1>
        </div>
        <div id="">
            <h6>* 에디터 이미지 업로드 방법&nbsp;<a href="javascript:openPopup();"><img src="/admin/images/help.png" width="15px" height="15px" border="0"/></a></h6>
        </div><hr/>
    <form name="frm" id="frm" method="post" class="form-horizontal">
        <input type="hidden" id="content" name="content" value=""/>
        <table class="table table-bordered">
            <tr>
                <td>
                    <label for="title">제목</label>
                </td>
                <td>
                    <input type="text" name="title" id="title" class="form-control" value="" size="80"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="writer">작성자</label>
                </td>
                <td>
                    <input type="text" name="writer" id="writer" class="form-control" value="" size="80"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="editBox">글 내용</label>
                </td>
                <td>
                    <textarea id="editBox" name="editBox" class="form-control" style="width:800px; height:600px"></textarea>
                </td>
            </tr>
        </table>
        <p class="form-group">
            <div class="col-sm-offset-2 col-sm-10 text-right">
                <input type="button" id="submitBtn" name="submitBtn" class="btn btn-default" value="전송"/>&nbsp;
                <input type="button" id="prevBtn" name="prevBtn" class="btn btn-default" value="이전화면"/>
            </div>
        </p>
    </form>
    </div>
</div>